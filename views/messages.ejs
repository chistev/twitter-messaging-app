</script>

<script>
document.addEventListener('DOMContentLoaded', function () {
    var popoverTemplate = document.getElementById('popover-template').innerHTML;
    var popoverTriggerList = [].slice.call(document.querySelectorAll('.bi-three-dots'));
    var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
        return new bootstrap.Popover(popoverTriggerEl, {
            content: popoverTemplate,
            html: true,
            placement: 'right',
            template: '<div class="popover custom-popover" role="tooltip"><div class="popover-arrow"></div><div class="popover-body"></div></div>'
        });
    });

    // Hide all popovers when a new one is about to be shown
    document.querySelectorAll('.bi-three-dots').forEach(function (el) {
        el.addEventListener('show.bs.popover', function () {
            popoverList.forEach(function (popover) {
                popover.hide();
            });
        });
    });

    // Hide popovers when clicking outside
    document.addEventListener('click', function (event) {
        popoverList.forEach(function (popover) {
            if (!event.target.closest('.popover') && !event.target.closest('.bi-three-dots')) {
                popover.hide();
            }
        });
    });
});
</script>


